<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- <item name="android:fontFamily">@font/oswald_light</item>-->
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerStyle</item>
        <item name="android:typeface">monospace</item>
        <item name="android:datePickerStyle">@style/MyDatePickerSpinnerStyle</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="FirebaseAuthTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/blue_dark_color</item>
        <item name="colorPrimaryDark">@color/blue_dark_color</item>
        <item name="colorAccent">@color/yellow_color</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:colorActivatedHighlight">@color/white_color</item>
        <item name="colorControlNormal">@color/blue_dark_color</item>
        <item name="colorControlActivated">@color/blue_light_color</item>
        <item name="colorControlHighlight">@color/yellow_color</item>
        <item name="android:windowBackground">@color/blue_dark_color</item>
    </style>


    <!--custom dialog theme-->
    <style name="full_screen_dialog" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


    <style name="MyDatePickerSpinnerStyle" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="colorControlNormal">#d50000</item>
    </style>


    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/blue_light_color</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

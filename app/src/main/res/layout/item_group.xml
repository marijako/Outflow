<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="h, 650:150">


        <ImageView
            android:id="@+id/imgViewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_dark_color" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineNumberTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.00" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineNumberBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineNumberRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineNumberLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/txtViewNumber"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="1"
            android:fontFamily="@font/oswald_light"
            android:textColor="@color/blue_light_color"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/guidelineNumberBottom"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineNumberLeft"
            app:layout_constraintRight_toRightOf="@id/guidelineNumberRight"
            app:layout_constraintTop_toTopOf="@+id/guidelineNumberTop" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineGroupNameRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.72" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineGroupNameBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/txtViewGroupName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:text="Flamingosi"
            android:textColor="@color/yellow_color"
            android:textSize="20sp"
            android:fontFamily="@font/oswald_regular"
            app:layout_constraintBottom_toBottomOf="@+id/guidelineGroupNameBottom"
            app:layout_constraintLeft_toLeftOf="@id/guidelineNumberRight"
            app:layout_constraintRight_toRightOf="@id/guidelineGroupNameRight"
            app:layout_constraintTop_toTopOf="@+id/guidelineNumberTop" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/txtViewGroupKey"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="top"
            android:text="-Ld9yjlYTMxtcngAPFZL"
            android:textColor="@color/white_color"
            android:textSize="14sp"
            android:fontFamily="@font/oswald_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guidelineNumberRight"
            app:layout_constraintRight_toRightOf="@id/guidelineGroupNameRight"
            app:layout_constraintTop_toTopOf="@+id/guidelineGroupNameBottom" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineGroupInvitePeopleLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.86" />


        <ImageView
            android:id="@+id/imgViewInviteUsers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="12dp"
            android:src="@drawable/invite_users"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guidelineGroupNameRight"
            app:layout_constraintRight_toRightOf="@id/guidelineGroupInvitePeopleLeft"
            app:layout_constraintTop_toTopOf="parent" />




        <ImageView
            android:id="@+id/imgViewLeaveTheGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="12dp"
            android:src="@drawable/leave_the_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guidelineGroupInvitePeopleLeft"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottomDividerTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layerType="software"
        android:src="@drawable/dotted_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineBottomDividerTop" />


</androidx.constraintlayout.widget.ConstraintLayout>